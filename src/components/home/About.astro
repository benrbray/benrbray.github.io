---
import { Content as AboutContent } from "@root/content/snippets/about-me.mdx";
---

<div id="about">
	<!-- photo -->
	<div class="about-portrait">
		<img alt="Photo of me in Wakayama, Japan in May 2024" src="/images/profile/ben-wakayama-2024.png" />
	</div>
	<!-- ontro -->
	<div class="about-title">Benjamin R. Bray</div>
	<div class="about-description">
		<AboutContent />
	</div>
</div>

<style is:inline>
/* ---- grid layout ----------------------------------------------------------*/

#about {
	display: grid;
}

#about .about-portrait    { grid-area: photo; }
#about .about-title       { grid-area: name;  }
#about .about-description { grid-area: intro; }

/* grid layout (mobile / narrow screen) */

@media (min-width: 52rem) {
	#about {
		column-gap: 2em;
		grid-template-columns: 1fr 2.8fr;
		grid-template-areas:
			"photo name"
			"photo intro";
	}
}

/* grid layout (desktop / wide screen) */

@media (max-width: 52rem) {
	#about {
		grid-template-columns: 1fr 2fr;
		grid-template-areas:
		"photo name"
		"intro intro";
	}
}

/* ---- title --------------------------------------------------------------- */

#about .about-title {
	font-size: 2em;
	font-weight: var(--font-bold-weight);
	/* grid */
	align-self: center;
}

@media (max-width: 52rem) {
	#about .about-title {
		padding-left: 16px;
	}
}

/* ---- portrait ------------------------------------------------------------ */

#about .about-portrait {
	/* min-width: 12rem; */
	min-width: 80px;
	display: flex;
	flex-direction: row;
	justify-content: center;
	align-items: flex-start;
}

#about .about-portrait img {
	display: block;
}

@media (min-width: 52rem) {
	#about .about-portrait {
		justify-self: stretch;
		min-height: 100%;
	}
	
	#about .about-portrait img {
		max-width: 100%;
		max-height: 100%;
	}
}

@media (max-width: 52rem) {

	#about .about-portrait {
		position: relative;
		/* max-height: min(50vh, 30em); */
		max-width: 5em;
		justify-self: right;
		border-radius: 50%;
		overflow: hidden;
	}

	#about .about-portrait::after {
		content: "";
		display: block;
		padding-bottom: 100%;
	}

	#about .about-portrait img {
		position: absolute;
		width: 100%;
		object-fit: cover;
		top: -2em;
	}
}

/* description */

#about .about-description {
	justify-content: center;
}

#about .about-description p {
	text-align: left;
}

#about .about-description ul { margin: 0.8rem 0; }
#about .about-description p  { margin: 0.6rem 0; }
#about .about-title          { margin: 0.6rem 0; }

</style>