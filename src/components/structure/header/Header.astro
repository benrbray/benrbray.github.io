---
import HeaderButton from './HeaderButton.astro';
import HeaderIcon from './HeaderIcon.astro';
import HeaderShapes from './HeaderShapes.astro';
---

<header>
	<div class="header-background">
		<HeaderShapes />
	</div>
	<nav class="header-nav">
		<!-- name -->
		<div class="header-name">
			<a href="/">Benjamin R. Bray</a>
		</div>
		<!-- buttons -->
		<div class="header-buttons">
			<HeaderButton href="/blog">Blog</HeaderButton>
			<HeaderButton href="/series">Guides</HeaderButton>
			<HeaderButton href="/projects">Projects</HeaderButton>
			<HeaderButton href="/journal">Journal</HeaderButton>
			<HeaderButton href="/about">Resume</HeaderButton>
			<!-- <HeaderButton href="/favorites">Favorites</HeaderButton> -->
		</div>
		<!-- icons -->
		<div class="header-icons">
			<HeaderIcon href="/rss.xml" iconSrc="/public/icons/rss.svg" />
			<HeaderIcon href="https://github.com/benrbray" iconSrc="/public/icons/github.svg" />
			<HeaderIcon href="/search" iconSrc="/public/icons/search.svg" /></div>
		</div>
	</nav>
</header>

<style>
.header-nav {
	position: relative;
	display: flex;

	margin: 2em auto;
	padding: 0 1em;
	max-width: var(--max-width);
	font-size: 1.125em;
	font-weight: bold;

	justify-content: space-between;
}

.header-background {
	z-index: -100;
}

.header-name {
	margin-right: 1em;
}

.header-name a {
	color: inherit;
}

.header-buttons {
	flex: 1;
	display: flex;
	justify-content: space-around;
}

.header-icons {
	display: flex;
	gap: 0.5em;

	margin-left: 0.5em;
}
</style>

