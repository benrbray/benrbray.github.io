---
import type { CollectionEntry } from 'astro:content';
import PostSummary from '../content/PostSummary.astro';
interface Props {
  posts: CollectionEntry<'blog'>[];
}

// `post` will match your 'blog' collection schema type
const { posts } = Astro.props;
---

<div class="post-list">
{
  posts.map((post) => (
    <PostSummary post={post}/>
  ))
}
</div>

<style>
.post-list {
  --list-columns: 3;

  display: grid;
  grid-template-columns: repeat(var(--list-columns), minmax(0, 1fr));
	grid-auto-flow: row dense;
  gap: var(--gap-1);

  place-items: stretch;
  justify-content: stretch;
  align-content: stretch;
}

.post-list .sentinel {
  border-radius: 0.2em;
  border: 1px solid black;
  padding: var(--gap-1);
  font-size: var(--font-size-larger);

  grid-column-end: -1;
}

@media(max-width:42rem) {
  .post-list {
    --list-columns: 2;
  }
}
</style>

<style is:global>
/* dates for smaller grid boxes should appear on own line */
.post-list .post-summary.priority-low .header-title {
  flex-direction: column;
  gap: var(--gap-0) !important;
}

.post-list .post-summary.priority-low .title {
  text-wrap: balance;
}
.post-list .post-summary.priority-normal {
  grid-column: span var(--list-columns);
}
</style>