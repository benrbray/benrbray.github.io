---
import { type CollectionEntry, getEntry } from 'astro:content';
import PostSummary from './PostSummary.astro';


interface Props {
  postSlug: CollectionEntry<'post'>["id"];
  show?: { summary?: boolean, image?: boolean, tags?: boolean };
}

const { postSlug, show } = Astro.props;
const post = await getEntry({ collection: "post", id: postSlug });
---

<PostSummary post={post} {...(show ? { show } :{})} />