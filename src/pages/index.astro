---
import About from '@components/home/About.astro';
import BaseHead from '@components/structure/BaseHead.astro';
import Footer from '@components/structure/Footer.astro';
import Header from '@components/structure/Header.astro';
import PostList from '@root/components/lists/PostList.astro';
import SeriesList from '@root/components/lists/SeriesList.astro';
import { SITE_TITLE } from '@root/consts';
import ColumnNormal from '@root/layouts/ColumnNormal.astro';
import { getPosts, getProjects, getSeriesList } from '@root/util/query';
import type { CollectionEntry } from 'astro:content';

const byDate = (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">): number => b.data.datePublished.valueOf() - a.data.datePublished.valueOf();
const posts = (await getPosts({ includeSeries: false })).sort(byDate);
const projects = (await getProjects()).sort(byDate);

const series = await getSeriesList();
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE}/>
	</head>
	<body>
		<Header />
		<main>
			<About />

			<ColumnNormal>
				<!-- Series -->
				{series.length > 0 && (<>
					<h2>Tutorial Series</h2>
					<SeriesList series={series} />
				</>)}
				<h2>Selected Projects</h2>
				<PostList posts={projects} />
				<!-- Posts -->
				<h2>Selected Posts</h2>
				<PostList posts={posts} />
			</ColumnNormal>
		</main>
		<Footer />
	</body>
</html>
