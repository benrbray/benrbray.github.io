{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",

    "baseUrl": ".",
    "paths": {
      "@root/*" : ["src/*"],
      "@components/*" : ["src/components/*"],
      "@styles/*" : ["src/styles/*"],
      "@layouts/*" : ["src/layouts/*"],
    }
  }
}